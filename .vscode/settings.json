{
  // Auto fix
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
  },
    "scss.lint.unknownAtRules": "ignore",

  // Enable eslint for all supported languages
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "json5",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ],
  "typescript.tsdk": "node_modules/typescript/lib"
}
